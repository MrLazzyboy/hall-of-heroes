{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "apps/frontend/src/**/*",
    "apps/frontend/src/**/*.vue"
  ],
  "exclude": [
    "apps/frontend/src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "../..",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
